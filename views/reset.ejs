<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body text-center">
            
            <!-- Reset Password Icon -->
            <h1 class="mb-3">
                <img src="https://cdn-icons-png.flaticon.com/512/6587/6587397.png" alt="icon" width="20%" />
            </h1>

            <!-- Reset Password Header -->
            <h2>
                Reset Password
            </h2>
            
            <!-- Include error/success messages -->
            <%- include ("./messages") %>
            
            <form action="/auth/reset/<%= id %>"  method="POST">
                <div class="form-group">
                    <label for="password">Password</label>
                    <!-- Input field for password with placeholder and value -->
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
                      value="<%= typeof password != 'undefined' ? password : '' %>" />
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <!-- Input field for confirming password with placeholder and value -->
                    <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
                      value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                </div>
                <!-- Submit button for resetting the password -->
                <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
            </form>
            <!-- Link to the login page for users who forgot their password -->
            <p class="mt-4"> Did you forget your password.?? <a href="/auth/login">Login</a></p>
        </div>
    </div>
</div>
